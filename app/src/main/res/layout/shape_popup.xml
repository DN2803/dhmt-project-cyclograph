<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingRight="20dp">
<!--        <ImageButton-->
<!--            android:id="@+id/done"-->

<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:background="@color/backgroundPopUp"-->
<!--            android:src="@mipmap/check"/>-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/draw_brush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@drawable/border_backgroud">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="4"
            android:src="@mipmap/paint_brush" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Brush" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/draw_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/border_backgroud">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="4"
            android:src="@mipmap/nodes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/draw_polygon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@drawable/border_backgroud">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="4"
            android:src="@mipmap/square" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Polygon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/draw_curve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@drawable/border_backgroud">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="4"
            android:src="@mipmap/line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Curve" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/draw_elipse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@drawable/border_backgroud">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="4"
            android:src="@mipmap/elips" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Elipse" />
    </LinearLayout>

</LinearLayout>